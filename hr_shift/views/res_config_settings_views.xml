<?xml version="1.0" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@name='work_organization_setting_container']"
                position="inside"
            >
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="company_shifts_default_span"
                >
                    <div class="o_setting_right_pane">
                        <div class="o_form_label mt8">Default working week
                            <span
                                class="fa fa-lg fa-building-o"
                                title="Values set here are company-specific."
                                role="img"
                                aria-label="Values set here are company-specific."
                                groups="base.group_multi_company"
                            />
                        </div>
                        <div class="row">
                            <div class="text-muted col-lg-8">
                                Set default company's default working start and end day to be used in shifts span
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <label
                                    for="shift_start_day"
                                    string="Week gos from"
                                    class="o_light_label"
                                />
                                <field
                                    name="shift_start_day"
                                    class="oe_inline"
                                    required="1"
                                />
                                <label
                                    for="shift_end_day"
                                    string="to"
                                    class="ml-2 o_light_label"
                                />
                                <field
                                    name="shift_end_day"
                                    class="oe_inline"
                                    required="1"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
