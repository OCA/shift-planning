<?xml version="1.0" ?>
<odoo>
    <record id="shift_template_form" model="ir.ui.view">
        <field name="model">hr.shift.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="color" widget="color_picker" />
                        </group>
                        <group>
                            <field name="start_time" widget="float_time" />
                            <field name="end_time" widget="float_time" />
                        </group>
                        <group>
                            <field name="day_of_week_start" />
                            <field name="day_of_week_end" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="shift_template_tree" model="ir.ui.view">
        <field name="model">hr.shift.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="color" widget="color_picker" />
                <field name="name" />
                <field name="start_time" widget="float_time" />
                <field name="end_time" widget="float_time" />
                <field name="day_of_week_start" />
                <field name="day_of_week_end" />
            </tree>
        </field>
    </record>
    <record id="shift_template_action" model="ir.actions.act_window">
        <field name="res_model">hr.shift.template</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="shift_template_menu"
        name="Shifts"
        parent="shift_planning_root"
        action="shift_template_action"
        sequence="30"
    />
</odoo>
